# ATS-Toolkit Configuration
# Copy this file to .env and customize

# Environment: development, staging, production
ATS_ENV=development
ATS_DEBUG=false
ATS_LOG_LEVEL=INFO

# Performance
ATS_THREADS=50
ATS_TIMEOUT=60
ATS_MAX_CONCURRENT_MODULES=5

# API Server
ATS_API_HOST=127.0.0.1
ATS_API_PORT=8000

# Streamlit
ATS_STREAMLIT_PORT=8501

# Redis Cache
ATS_REDIS_HOST=localhost
ATS_REDIS_PORT=6379
ATS_REDIS_DB=0

# Proxy Configuration
ATS_PROXY_ENABLED=false
ATS_PROXY_HOST=
ATS_PROXY_PORT=8080
ATS_PROXY_USER=
ATS_PROXY_PASS=

# API Keys (configure via TUI F2 for security)
# OSINT Services
ATS_API_SHODAN=
ATS_API_CENSYS_UID=
ATS_API_CENSYS_SECRET=
ATS_API_HUNTER=
ATS_API_VIRUSTOTAL=
ATS_API_SECURITYTRAILS=
ATS_API_WHOISXML=

# Paths
ATS_LOG_DIR=logs
ATS_CONFIG_DIR=config
