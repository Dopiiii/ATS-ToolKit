# =============================================================================
# OSINT Platform Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="OSINT Platform"
DEBUG=true
ENV=development

# Secret key for JWT signing (CHANGE IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-in-production-use-secrets-token-urlsafe

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection
POSTGRES_USER=osint
POSTGRES_PASSWORD=osint_secret
POSTGRES_DB=osint_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full database URL (used by the application)
DATABASE_URL=postgresql+asyncpg://osint:osint_secret@localhost:5432/osint_db

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Authentication Settings
# -----------------------------------------------------------------------------
# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# API Server Settings
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# -----------------------------------------------------------------------------
# External API Keys (Optional)
# -----------------------------------------------------------------------------
# Shodan
SHODAN_API_KEY=

# VirusTotal
VIRUSTOTAL_API_KEY=

# Have I Been Pwned
HIBP_API_KEY=

# Hunter.io
HUNTER_API_KEY=

# SecurityTrails
SECURITYTRAILS_API_KEY=

# Censys
CENSYS_API_ID=
CENSYS_API_SECRET=

# GitHub (for higher rate limits)
GITHUB_TOKEN=

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=console
# Options: console, json

# -----------------------------------------------------------------------------
# Phase 3+ (Future - Not used in Phase 1)
# -----------------------------------------------------------------------------
# Elasticsearch
# ELASTICSEARCH_URL=http://localhost:9200

# Neo4j
# NEO4J_URI=bolt://localhost:7687
