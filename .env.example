# =============================================================================
# ATS-Toolkit v2.0 Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="ATS-Toolkit"
APP_VERSION="2.0.0"
DEBUG=false
ENV=production

# -----------------------------------------------------------------------------
# API Server Settings
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
# Options: console, json
LOG_FILE=logs/ats-toolkit.log

# -----------------------------------------------------------------------------
# Database (SQLite audit trail)
# -----------------------------------------------------------------------------
AUDIT_DB_PATH=data/audit.db

# -----------------------------------------------------------------------------
# Redis Cache (Optional)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# External API Keys (Optional - required by specific modules)
# -----------------------------------------------------------------------------

# Shodan (shodan_search, attack_surface_mapper)
SHODAN_API_KEY=

# VirusTotal (malware modules)
VIRUSTOTAL_API_KEY=

# Have I Been Pwned (data_breach_checker)
HIBP_API_KEY=

# Hunter.io (email_hunter)
HUNTER_API_KEY=

# SecurityTrails (subdomain_enum, dns_records)
SECURITYTRAILS_API_KEY=

# Censys (certificate_transparency)
CENSYS_API_ID=
CENSYS_API_SECRET=

# OpenAI (AI/ML modules)
OPENAI_API_KEY=

# GitHub (higher rate limits for recon)
GITHUB_TOKEN=

# Abuseipdb
ABUSEIPDB_API_KEY=

# AlienVault OTX
OTX_API_KEY=

# URLScan.io
URLSCAN_API_KEY=

# Binary Edge
BINARYEDGE_API_KEY=

# Ethereum / Web3
ETHERSCAN_API_KEY=
WEB3_PROVIDER_URL=

# -----------------------------------------------------------------------------
# Module Execution Settings
# -----------------------------------------------------------------------------
MAX_CONCURRENT_MODULES=5
MODULE_TIMEOUT_SECONDS=300
RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# Streamlit Web UI
# -----------------------------------------------------------------------------
STREAMLIT_PORT=8501

# -----------------------------------------------------------------------------
# Docker Settings
# -----------------------------------------------------------------------------
# DOCKER_NETWORK=ats-network
